<?xml version="1.0" encoding="UTF-8" ?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ehcache.xsd">
<!-- maxElementsInMemory设定内存中创建对象的最大值 
     eternal设置元素（译注：内存中对象）是否永久驻留。如果是，将忽略超 时限制且元素永不消亡 
     overflowToDisk设置当内存中缓存达到 maxInMemory 限制时元素是否可写到磁盘上
     diskPersistent是否disk store在虚拟机启动时持久化。默认为false 
     diskExpiryThreadIntervalSeconds运行disk终结线程的时间，默认为120秒 -->  
	<diskStore path="java.io.tmpdir" />
	
	<defaultCache maxElementsInMemory="10000" 
		eternal="false" timeToIdleSeconds="120" timeToLiveSeconds="120" 
		overflowToDisk="true" memoryStoreEvictionPolicy="LRU" 
		 diskExpiryThreadIntervalSeconds="120"
		diskPersistent="false"/>
	
	<cache name="eternal" maxElementsInMemory="10000" 
		eternal="true" timeToIdleSeconds="0" timeToLiveSeconds="0"
		overflowToDisk="true" memoryStoreEvictionPolicy="LFU"
		 diskExpiryThreadIntervalSeconds="120">
		<cacheEventListenerFactory class="com.xunruan.framekork.cache.listener.EhCacheEventListenerFactory"/>  	
	</cache>
	
	<cache name="bulk" maxElementsInMemory="1" 
		eternal="true" timeToIdleSeconds="0" timeToLiveSeconds="0"
		overflowToDisk="true" memoryStoreEvictionPolicy="LFU"
		 diskExpiryThreadIntervalSeconds="120">
		<cacheEventListenerFactory class="com.xunruan.framekork.cache.listener.EhCacheEventListenerFactory"/>  	
	</cache>
	
	<cache name="hour" maxElementsInMemory="10"
		eternal="false" timeToIdleSeconds="0" timeToLiveSeconds="3600"
		overflowToDisk="true" memoryStoreEvictionPolicy="LFU"
		 diskExpiryThreadIntervalSeconds="120">
		<cacheEventListenerFactory class="com.xunruan.framekork.cache.listener.EhCacheEventListenerFactory"/>  	
	</cache>		
	
	<cache name="day" maxElementsInMemory="10"
		eternal="false" timeToIdleSeconds="0" timeToLiveSeconds="86400"
		overflowToDisk="true" memoryStoreEvictionPolicy="LFU"
		 diskExpiryThreadIntervalSeconds="120">
		<cacheEventListenerFactory class="com.xunruan.framekork.cache.listener.EhCacheEventListenerFactory"/>  	
	</cache>	
</ehcache>
