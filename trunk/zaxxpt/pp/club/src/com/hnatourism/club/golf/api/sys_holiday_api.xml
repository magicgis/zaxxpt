<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="sysHoliday">
	<typeAlias alias="sysHolidayVo" type="com.hnatourism.club.golf.prod.vo.SysHolidayVo" />
	<resultMap id="api_sysHolidayResultMap" class="sysHolidayVo">
		<result column="ID" property="id" />
		<result column="HOLIDAY_DATE" property="holidayDate" />
		<result column="NAME" property="name" />
		<result column="STS" property="sts" />
		<result column="RMK" property="rmk" />
	</resultMap>
	
	<parameterMap class="java.util.HashMap" id="parameterMap">   
      <parameter property="id"/>
    </parameterMap> 
    
	<sql id="api_selectSysHolidaySql">
		<![CDATA[
			SELECT T.ID,T.HOLIDAY_DATE,T.NAME,T.STS,T.RMK
			FROM SYS_HOLIDAY T
		]]>
	</sql>
	
	<select id="api_findsysHolidayBydate" parameterClass="java.util.HashMap" resultMap="api_sysHolidayResultMap">
		<include refid="api_selectSysHolidaySql"/>	
		<![CDATA[
			WHERE T.HOLIDAY_DATE=#date#
		]]>
	</select>
</sqlMap>