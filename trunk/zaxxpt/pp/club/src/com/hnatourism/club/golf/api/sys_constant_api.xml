<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="sysConstant">
	<typeAlias alias="sysConstantVo" type="com.hnatourism.club.golf.prod.vo.SysConstantVo" />
	<resultMap id="api_sysConstantResultMap" class="sysConstantVo">
		<result column="ID" property="id" />
		<result column="CON_TYP" property="conType" />
		<result column="CON_NAM" property="conName" />
		<result column="CON_VAL" property="conValue" />
		<result column="STATUS" property="status" />
		<result column="CODE" property="code" />
	</resultMap>
	
	<parameterMap class="java.util.HashMap" id="parameterMap">   
      <parameter property="id"/>
      <parameter property="containItem"/>
    </parameterMap> 
    
	<sql id="api_selectSysConstantSql">
		<![CDATA[
			SELECT T.ID,T.CON_TYP,T.CON_NAM,T.CON_VAL,T.STATUS,T.CODE
			FROM SYS_CONSTANT T
		]]>
	</sql>
	
	<select id="api_findsysConstant_golfitem" parameterClass="java.lang.String" resultMap="api_sysConstantResultMap">
		<include refid="api_selectSysConstantSql"/>	
		<![CDATA[
			WHERE T.ID='GOLF_ITEM' and T.CON_VAL = #containItem#
		]]>
	</select>
	
	<select id="api_findsysConstant_golftype" parameterClass="java.lang.String" resultMap="api_sysConstantResultMap">
		<include refid="api_selectSysConstantSql"/>	
		<![CDATA[
			WHERE T.ID='GOLF_TYPE' and T.CON_VAL=#type#
		]]>
	</select>
	
	<select id="api_findsysConstant_golfSiteMode" parameterClass="java.lang.String" resultMap="api_sysConstantResultMap">
		<include refid="api_selectSysConstantSql"/>	
		<![CDATA[
			WHERE T.ID='GOLF_SITE_MODE' and T.CON_VAL=#type#
		]]>
	</select>
	
	<select id="api_findsysConstant_golfStatus" parameterClass="java.lang.String" resultMap="api_sysConstantResultMap">
		<include refid="api_selectSysConstantSql"/>	
		<![CDATA[
			WHERE T.ID='GOLF_SITE_STS' and T.CON_VAL=#type#
		]]>
	</select>
		
</sqlMap>