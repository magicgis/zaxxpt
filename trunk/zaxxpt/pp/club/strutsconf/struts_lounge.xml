<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="defaultlounge" extends="struts-default">
		<!-- 机场首页跳转 ,高杰-->
		<action name="loungeHome" class="LoungeInfoAction" method="toHome">
			<result name="success">
				/WEB-INF/pages/lounge/index.jsp
			</result>
			<result name="searchPage">/WEB-INF/pages/lounge/prod/search.jsp</result>
			<result name="error">
				/common/error.jsp
			</result>
		</action>
		<!-- 机场首页跳转 ,高杰-->
		<action name="loungeDetailAction" class="LoungeInfoAction" method="loungeDetail">
			<result name="detail">/WEB-INF/pages/lounge/loungeDetail.jsp</result>
			<result name="error">
				/common/error.jsp
			</result>
		</action>
		<!-- 机场预订页跳转 ,高杰-->
		<action name="bookLounge" class="OrderLoungeAction" method="toAdd">
			<result name="success">
				/WEB-INF/pages/lounge/book/book.jsp
			</result>
			<result name="notlogin" type="redirect">
				/member/login.jsp?id=${id}&amp;time=${time}
			</result>
			<result name="error">
				/common/error.jsp
			</result>
		</action>
		<!-- 休息室预订 ,高杰-->
		<action name="addLoungeOrder" class="OrderLoungeAction" method="add">
			<result name="success" type="redirect">
				/common/success.jsp?goods=lounge&amp;orderId=${orderId}&amp;orderCode=${orderCode}&amp;price=${amountPrice}&amp;type=${roomType}&amp;message=${message}
			</result>
			<result name="notlogin" type="redirect">
				/member/login.jsp
			</result>
			<result name="error">
				/common/error.jsp
			</result>
		</action>
	</package>
	<package name="orderlounge" extends="struts-default">
		<!-- 休息室定单跳转 ,lxd-->
		<action name="orderLounge" class="OrderLoungeAction" method="searchOneOrder">
			<result name="notlogin" type="redirect">
				/member/login.jsp
			</result>
			<result name="view">/WEB-INF/pages/lounge/order/view.jsp</result>
			<result name="searchAll">member/order.jsp</result><!-- 总结果页面 -->
		</action>
		
		<!-- 休息室订单管理 -->
		<action name="loungeOrderAction" class="LoungeOrderAction" >
			<result name="notlogin" type="redirect">
				/member/login.jsp
			</result>
			<result name="view">/WEB-INF/pages/lounge/order/view.jsp</result>
			<result name="viewDetail" type="redirect">/loungeOrderAction!viewOrderDetail.action?id=${id}</result>
			<result name="error">/common/error.jsp</result>
		</action>
	</package>
	<package name="lounge.prod" extends="default">
		<action name="orderLoungeExceptionAction" class="com.hnatourism.club.lounge.prod.web.OrderLoungeExceptionAction" method="search">
			<result name="addPage">/WEB-INF/pages/lounge.prod/addOrderLoungeException.jsp</result>
			<result name="modifyPage">/WEB-INF/pages/lounge.prod/modifyOrderLoungeException.jsp</result>
			<result name="searchPage">/WEB-INF/pages/lounge.prod/searchOrderLoungeException.jsp</result>
			<result name="viewPage">/WEB-INF/pages/lounge.prod/viewOrderLoungeException.jsp</result>
			<result name="successPage">/WEB-INF/pages/lounge.prod/success.jsp</result>
			<result name="failPage">/WEB-INF/pages/lounge.prod/fail.jsp</result>
		</action>		
	</package>
</struts>
