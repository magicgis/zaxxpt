			<result name="notlogin" type="redirect">
				/member/login.jsp
			</result>
			<result name="error">
				/common/error.jsp
			</result>
		</action>
		<!-- 酒店预订 ,高杰-->
		<action name="bookhotel" class="com.hnatourism.club.hotel.prod.web.action.HotelBookAction" method="bookHotel">
			<result name="success" type="redirect">
				/common/success.jsp?goods=hotel&amp;orderId=${orderId}&amp;orderCode=${orderCode}&amp;price=${amountPrice}
			</result>
			<result name="notlogin" type="redirect">
				/member/login.jsp
			</result>
			<result name="error">
				/common/error.jsp
			</result>
		</action>

