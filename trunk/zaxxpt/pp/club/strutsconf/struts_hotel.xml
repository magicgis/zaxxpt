		<action name="hotelbook" class="com.hnatourism.club.hotel.prod.web.action.HotelBookAction" method="toBook">
			<result name="success">
				/WEB-INF/pages/hotel/book/book.jsp
			</result>
			<result name="notlogin" type="redirect">
				/member/login.jsp?hcode=${hcode}&amp;rcode=${rcode}&amp;idate=${idate}&amp;odate=${odate}
