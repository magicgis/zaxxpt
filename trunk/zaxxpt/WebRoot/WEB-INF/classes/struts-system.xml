<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="sys" extends="core" namespace="/sys">  
       <action name="user_*" class="userAction" method="{1}">
       		<result name="add" type="redirect">/sys/user_query.action</result>
			<result name="delete" type="redirect">/sys/user_query.action</result>
			<result name="edit" type="redirect">/sys/user_query.action</result>
			<result name="view">/system/user/user_info.jsp</result>
			<result name="list">/system/user/user_list.jsp</result>
	   </action>
	   <action name="dept_*" class="deptAction" method="{1}">
       		<result name="add" type="redirect">/sys/dept_query.action</result>
			<result name="delete" type="redirect">/sys/dept_query.action</result>
			<result name="edit" type="redirect">/sys/dept_query.action</result>
			<result name="view">/system/dept/dept_info.jsp</result>
			<result name="list">/system/dept/dept_list.jsp</result>
	   </action>
	   <action name="dict_*" class="dictAction" method="{1}">
       		<result name="add" type="redirect">/sys/dict_query.action</result>
			<result name="delete" type="redirect">/sys/dict_query.action</result>
			<result name="edit" type="redirect">/sys/dict_query.action</result>
			<result name="view">/system/dict/dict_info.jsp</result>
			<result name="list">/system/dict/dict_list.jsp</result>
	   </action>
	   <action name="duty_*" class="dutyAction" method="{1}">
       		<result name="add" type="redirect">/sys/duty_query.action</result>
			<result name="delete" type="redirect">/sys/duty_query.action</result>
			<result name="edit" type="redirect">/sys/duty_query.action</result>
			<result name="view">/system/duty/duty_info.jsp</result>
			<result name="list">/system/duty/duty_list.jsp</result>
	   </action>
	   <action name="role_*" class="roleAction" method="{1}">
       		<result name="add" type="redirect">/sys/role_query.action</result>
			<result name="delete" type="redirect">/sys/role_query.action</result>
			<result name="edit" type="redirect">/sys/role_query.action</result>
			<result name="view">/system/role/role_info.jsp</result>
			<result name="list">/system/role/role_list.jsp</result>
			
			<result name="source" type="redirect">/sys/role_query.action</result>
			<result name="input" >/resources/error/norole.jsp</result>
	   </action>
	   <action name="log_*" class="logAction" method="{1}">
			<result name="view">/system/logs/log_info.jsp</result>
			<result name="list">/system/logs/loglist.jsp</result>
	   </action>
	</package>
</struts>