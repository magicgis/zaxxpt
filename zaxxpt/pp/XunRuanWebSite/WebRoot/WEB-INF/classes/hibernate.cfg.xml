<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

<session-factory>
	<!-- 数据库信息 --><!-- 方言数据库类型 -->
	<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
	<property name="hbm2ddl.auto">update</property><!-- 启动的时候会去检查schema是否一致，如果不一致会做scheme更新 -->
	<property name="show_sql">true</property><!-- 是否显示sql语句 -->
	<property name="query.factory_class">
		org.hibernate.hql.ast.ASTQueryTranslatorFactory
	</property><!--基于ANTLR的HQL/SQL查询翻译器2.0的为  org.hibernate.hql.classic.ClassicQueryTranslatorFactory -->
	<property name="generate_statistics">true</property>
	<!-- 二级缓存统计信息 -->
	<property name="connection.release_mode">auto</property>
	<!--连接方式  -->
	<property name="hibernate.c3p0.acquire_increment">1</property>
	<!--当连接池中的连接耗尽的时候c3p0一次同时获取的连接数。 -->
	<property name="hibernate.c3p0.idle_test_period">6000</property>
	<!--每6000秒检查所有连接池中的空闲连接。Default: 0 -->
	<property name="hibernate.c3p0.timeout">60</property>
	<!--当前连接池中无连接时 获取连接最大的等待时间为60秒 -->
	<property name="hibernate.c3p0.validate">true</property><!--  -->
	<property name="hibernate.c3p0.max_size">500</property>
	<!--  -->
	<property name="hibernate.c3p0.min_size">2</property>
	<!--  -->

	<!-- 映射文件 -->
	<mapping resource="About.hbm.xml" />
	<mapping resource="Constant.hbm.xml" />
	<mapping resource="IntegratedService.hbm.xml" />
	<mapping resource="Privilege.hbm.xml" />
	<mapping resource="RealInfo.hbm.xml" />
	<mapping resource="Role.hbm.xml" />
	<mapping resource="RolePrivilege.hbm.xml" />
	<mapping resource="Solution.hbm.xml" />
	<mapping resource="SysUser.hbm.xml" />
	<mapping resource="UserRole.hbm.xml" />
	<mapping resource="Source.hbm.xml" />
	<mapping resource="Customer.hbm.xml" />
	<mapping resource="Message.hbm.xml" />
	<mapping resource="Produce.hbm.xml" />
	<mapping resource="ProductCustomer.hbm.xml" />
	<mapping resource="Experience.hbm.xml" />

</session-factory>

</hibernate-configuration>