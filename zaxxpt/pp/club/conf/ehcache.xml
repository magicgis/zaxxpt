<?xml version="1.0" encoding="UTF-8" ?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ehcache.xsd">
	<diskStore path="java.io.tmpdir" />
	
	<defaultCache maxElementsInMemory="10000" 
		eternal="false" timeToIdleSeconds="120" timeToLiveSeconds="120" 
		overflowToDisk="true" memoryStoreEvictionPolicy="LRU" 
		diskSpoolBufferSizeMB="30" maxElementsOnDisk="0" diskExpiryThreadIntervalSeconds="120"
		diskPersistent="false"/>
	
	<cache name="eternal" maxElementsInMemory="10000" 
		eternal="true" timeToIdleSeconds="0" timeToLiveSeconds="0"
		overflowToDisk="true" memoryStoreEvictionPolicy="LFU"
		diskSpoolBufferSizeMB="30"  maxElementsOnDisk="0" diskExpiryThreadIntervalSeconds="120">
		<cacheEventListenerFactory class="com.hnatourism.framework.cache.listener.EhCacheEventListenerFactory"/>  	
	</cache>
	
	<cache name="bulk" maxElementsInMemory="1" 
		eternal="true" timeToIdleSeconds="0" timeToLiveSeconds="0"
		overflowToDisk="true" memoryStoreEvictionPolicy="LFU"
		diskSpoolBufferSizeMB="30"  maxElementsOnDisk="0" diskExpiryThreadIntervalSeconds="120">
		<cacheEventListenerFactory class="com.hnatourism.framework.cache.listener.EhCacheEventListenerFactory"/>  	
	</cache>
	
	<cache name="hour" maxElementsInMemory="10"
		eternal="false" timeToIdleSeconds="0" timeToLiveSeconds="3600"
		overflowToDisk="true" memoryStoreEvictionPolicy="LFU"
		diskSpoolBufferSizeMB="30" maxElementsOnDisk="100" diskExpiryThreadIntervalSeconds="120">
		<cacheEventListenerFactory class="com.hnatourism.framework.cache.listener.EhCacheEventListenerFactory"/>  	
	</cache>		
	
	<cache name="day" maxElementsInMemory="10"
		eternal="false" timeToIdleSeconds="0" timeToLiveSeconds="86400"
		overflowToDisk="true" memoryStoreEvictionPolicy="LFU"
		diskSpoolBufferSizeMB="30" maxElementsOnDisk="100" diskExpiryThreadIntervalSeconds="120">
		<cacheEventListenerFactory class="com.hnatourism.framework.cache.listener.EhCacheEventListenerFactory"/>  	
	</cache>	
</ehcache>
