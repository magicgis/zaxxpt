<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="sysRole">
	<typeAlias alias="sysRole" type="com.hnatourism.club.base.domain.SysRole" />
	<resultMap id="sysRoleResultMap" class="sysRole">
		<result column="ID" property="id" />
		<result column="NAME" property="name" />
		<result column="CODE" property="code" />
		<result column="RMK" property="rmk" />
		<result column="STS" property="sts" />
	</resultMap>
	<sql id="selectSysRoleSql">
		<![CDATA[
			SELECT T.ID,T.NAME,T.CODE,T.RMK,T.STS 
			FROM SYS_ROLE T
		]]>
	</sql>
	<select id="findSysRoleByWhere" parameterClass="sysRole" resultMap="sysRoleResultMap">
		<include refid="selectSysRoleSql"/>	
		<dynamic prepend="WHERE">
			<isNotEmpty prepend="AND" property="name">
				T.NAME=#name#
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="code">
				T.CODE=#code#
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="rmk">
				T.RMK=#rmk#
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="sts">
				T.STS=#sts#
			</isNotEmpty>
		</dynamic>
	</select>
	<select id="findSysRoleById" parameterClass="java.lang.String" resultMap="sysRoleResultMap">
		<include refid="selectSysRoleSql"/>	
		<![CDATA[
			WHERE T.ID=#id#
		]]>
	</select>
	<insert id="insertSysRole" parameterClass="sysRole">
		INSERT INTO SYS_ROLE
		<dynamic prepend="(">
			<isNotEmpty prepend="," property="id">
				ID
			</isNotEmpty>
			<isNotEmpty prepend="," property="name">
				NAME
			</isNotEmpty>
			<isNotEmpty prepend="," property="code">
				CODE
			</isNotEmpty>
			<isNotEmpty prepend="," property="rmk">
				RMK
			</isNotEmpty>
			<isNotEmpty prepend="," property="sts">
				STS
			</isNotEmpty>
		</dynamic>		
		<dynamic prepend=") VALUES (">
			<isNotEmpty prepend="," property="id">
				#id#	
			</isNotEmpty>
			<isNotEmpty prepend="," property="name">
				#name#
			</isNotEmpty>
			<isNotEmpty prepend="," property="code">
				#code#
			</isNotEmpty>
			<isNotEmpty prepend="," property="rmk">
				#rmk#
			</isNotEmpty>
			<isNotEmpty prepend="," property="sts">
				#sts#
			</isNotEmpty>
		 </dynamic>	)
	</insert>
	
	<update id="updateSysRole" parameterClass="sysRole">
		UPDATE SYS_ROLE
        <dynamic prepend="set">
		   <isNotEmpty prepend="," property="name">
              NAME=#name#
           </isNotEmpty>
		   <isNotEmpty prepend="," property="code">
              CODE=#code#
           </isNotEmpty>
		   <isNotEmpty prepend="," property="rmk">
              RMK=#rmk#
           </isNotEmpty>
		   <isNotEmpty prepend="," property="sts">
              STS=#sts#
           </isNotEmpty>
        </dynamic>
		WHERE 
               ID=#id#
	</update>	
	<delete id="deleteSysRole" parameterClass="java.lang.String">
		DELETE FROM SYS_ROLE
		WHERE 
               ID=#id#
	</delete>	
</sqlMap>